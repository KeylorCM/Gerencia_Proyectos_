
@{
    ViewBag.Title = "Login";
}

<div class="container mt-5">
    <form method="post" class="h-100 my-auto mx-auto">
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Email</label>
            <input name="email" type="email" class="form-control" id="Email" placeholder="Email" aria-describedby="emailHelp">
        </div>
        <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label">Contraseña</label>
            <input name="password" type="password" class="form-control" placeholder="Contraseña" id="Password1">
        </div>
        <button id="login" type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

